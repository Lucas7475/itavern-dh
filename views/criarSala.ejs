<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Crie o grupo</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">X</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="#" class="formulario" method="post" enctype="multipart/form-data">
    
            <div class="nomeGrupo">
                <label for="nomeGrupo">Nome do Grupo:</label>
                <input type="text" name="nome" id="nomeGrupo">            
            </div>
        
            <div class="nomeJogo">
                <label for="nomeJogo">Nome do Jogo:</label>
                    <select name="nomeJogo" id="nomeJogo">
                        <option selected disabled>Selecione</option>
                        <!--  for(jogo of jogos){ -->
                            <!-- <option value=" jogo.id ">jogo.nome</option> -->
                        <!--  }  -->
                    </select>
            </div>
        
            <div class="numJogadores">
                <label for="numJogador">Nº de Jogadores:</label>
                <select name="numJogadores" id="numJogador">
                    <option selected disabled>nº</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
        
            <div class="inicio">
                <label for="inicio">Início das Reuniões:</label>
                <input type="text" name="inicioReuniao" id="inicio" placeholder="dd/mm/aaaa"><!-- calendario será aprimorado -->
            </div>

            <div class="horario">
              <label for="horario">Horario das Reuniões:</label>
              <select name="horario" id="horario">
                  <option selected disabled>Selecione</option>
                  <option value="1">1:00h</option>
                  <option value="2">2:00hs</option>
                  <option value="3">3:00hs</option>
                  <option value="4">4:00hs</option>
                  <option value="5">5:00hs</option>
                  <option value="6">6:00hs</option>
                  <option value="7">7:00hs</option>
                  <option value="8">8:00hs</option>
                  <option value="9">9:00hs</option>
                  <option value="10">10:00hs</option>
                  <option value="11">11:00hs</option>
                  <option value="12">12:00hs</option>
                  <option value="13">13:00hs</option>
                  <option value="14">14:00hs</option>
                  <option value="15">15:00hs</option>
                  <option value="16">16:00hs</option>
                  <option value="17">17:00hs</option>
                  <option value="18">18:00hs</option>
                  <option value="19">19:00hs</option>
                  <option value="20">20:00hs</option>
                  <option value="21">21:00hs</option>
                  <option value="22">22:00hs</option>
                  <option value="23">23:00hs</option>
                  <option value="24">00:00h</option>
              </select>
          </div>

          <div class="duracao">
            <label for="tempo">Tempo de jogo:</label>
            <select name="duracao" id="tempo">
                <option selected disabled>Selecione</option>
                <option value="2">2 horas</option>
                <option value="3">3 horas</option>
                <option value="4">4 horas</option>
                <option value="5">5 horas</option>
                <option value="6">6 horas</option>
                <option value="7">7 horas</option>
                <option value="8">8 horas</option>
            </select>
        </div>
        
            <div class="endereco">
                <div class="cep">
                    <label for="cep">CEP:</label>
                    <input type="text" name="cep" id="cep">
                </div>
        
                <div class="cidade">
                    <label for="cidade">Cidade:</label>
                    <select name="cidade" id="cidade">
                        <option selected disabled>Selecione</option>
                        <!--  for(cidade of cidades){ -->
                            <!-- <option value=" cidade.id ">cidade.nome</option> -->
                        <!--  }  -->
                    </select>
                </div>
        
                <div class="rua">
                    <label for="rua">Endereço:</label>
                    <input type="text" name="rua" id="endereco">
                </div>
        
                <div class="numero">
                    <label for="numero">Número:</label>
                    <input type="text" name="numero" id="numero">
                </div>
        
                <div class="complemento">
                    <label for="complemento">Complemento:</label>
                    <input type="text" name="complemento" id="complemento">
                </div>
            </div>
        
            <div class="imgGrupo">
                <label for="imgGrupo">Imagem do grupo:</label>
                <div class="upload">
                    <input type="file" name="imgGrupo" id="imgGrupo">
                </div>
            </div>
        
            <div class="descricao">
                <label for="descricao">Descrição do grupo:</label>
                <textarea name="descricao" id="descricao"></textarea>
            </div>
        
            <div class="opcoes">
                Dias de reunião:
                <div class="diaReuniao">
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="domingo" value="domingo">
                      <label for="domingo">Domingo</label>
                    </div>
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="segunda" value="segunda" >
                      <label for="segunda">Segunda-Feira</label>
                    </div>
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="terca" value="terca" >
                      <label for="terca">Terça-Feira</label>
                    </div>
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="quarta" value="quarta" >
                      <label for="quarta">Quarta-Feira</label>
                    </div>
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="quinta" value="quinta" >
                      <label for="quinta">Quinta-Feira</label>
                    </div>
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="sexta" value="sexta" >
                      <label for="sexta">Sexta-Feira</label>
                    </div>
                    <div class="dia">
                      <input type="checkbox" name="diaReuniao" id="sabado" value="sabado">
                      <label for="sabado">Sábado</label>
                    </div>
                </div>
            </div>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn" data-dismiss="modal">Fechar</button>
          <button type="button" class="btn">Criar</button>
        </div>
      </div>
    </div>
  </div>
