<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Crie o grupo</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">X</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="#" class="formulario" method="post" enctype="multipart/form-data">
            <label class="nomeGrupo">
              Nome do Grupo:
              <input type="text" name="nomeGrupo" id="nomeGrupo">
            </label>
            <br>
            <label class="nomeJogo">
              Nome do Jogo:
              <select name="nomeJogo" id="nomeJogo">
                  <option selected disabled>Selecione</option>
                  <!--  for(jogo of jogos){ -->
                      <!-- <option value=" jogo.id ">jogo.nome</option> -->
                  <!--  }  -->
              </select>
            </label>
            <br>
            <div class="numJogadores">
              <label for="numJogador" id="numJogadores">Nº de Jogadores:</label>
              <select name="numJogadores" id="numJogador">
                    <option selected disabled>nº</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
              </select>
            </div>
            <br>
            <div class="inicio">
                <label for="inicio">Início das Reuniões:</label>
                <input class="teste" type="text" name="inicio" id="inicio" placeholder="dd/mm/aaaa"><!-- calendario será aprimorado -->
            </div>
            <br>
            <div class="horaReuniao">
                <label for="horaReuniao">Horário das Reuniões:</label>
                <input type="text" name="horaReuniao" id="diaReuniao">
            </div>
            <br>
            <div class="endereco">
              <label class="cidade">
                Cidade:
                <select name="nomeJogo" id="nomeJogo">
                  <option selected disabled>Selecione</option>
                  <!--  for(cidade of cidades){ -->
                      <!-- <option value=" cidade.id ">cidade.nome</option> -->
                  <!--  }  -->
                </select>
              </label>
              <label class="rua">
                Endereço:
                <input type="text" name="endereco" id="endereco">
              </label>
              <label class="numero">
                Número:
                <input type="text" name="numero" id="numero">
              </label>
              <label class="complemento">
                Complemento:
                <input type="text" name="complemento" id="complemento">
              </label>
            </div>
            <br>
            <label for="imgGrupo" class="imgGrupo">
                Imagem do grupo:
            </label>
            <div class="upload">
                  <input type="file" name="imgGrupo" id="imgGrupo">
            </div>
            <br>
            <label for="descricao" class="descricao">Descrição do grupo:</label>
            <br>
            <textarea name="descricao" id="descricao"></textarea>
            <br>
            <div class="opcoes">
                Filtros:
                <br>
                <div class="bebidas">
                  Distância:
                  <br>
                  <input type="radio" name="bebidas" id="livre" value="5km" >
                  <label for="livre">Até 5km</label>
                  <br>
                  <input type="radio" name="bebidas" id="semAlcool" value="15km">
                  <label for="semAlcool">Até 15km</label>
                  <br>
                  <input type="radio" name="bebidas" id="semBebidas" value="30km">
                  <label for="semBebidas">Até 30km</label>
                  <br>
                </div>
                <div class="crianca">
                  Dias de reunião:
                  <br>
                  <input type="checkbox" name="crianca" id="domingo" value="domingo">
                  <label for="domingo">Domingo</label>
                  <br>
                  <input type="checkbox" name="crianca" id="segunda" value="segunda" >
                  <label for="segunda">Segunda-Feira</label>
                  <br>
                  <input type="checkbox" name="crianca" id="terca" value="terca" >
                  <label for="terca">Terça-Feira</label>
                  <br>
                </div>
                <div class="crianca">
                  <input type="checkbox" name="crianca" id="quarta" value="quarta" >
                  <label for="quarta">Quarta-Feira</label>
                  <br>
                  <input type="checkbox" name="crianca" id="quinta" value="quinta" >
                  <label for="quinta">Quinta-Feira</label>
                  <br>
                  <input type="checkbox" name="crianca" id="sexta" value="sexta" >
                  <label for="sexta">Sexta-Feira</label>
                  <br>
                  <input type="checkbox" name="crianca" id="sabado" value="sabado">
                  <label for="sabado">Sábado</label>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn" data-dismiss="modal">Fechar</button>
          <button type="button" class="btn">Criar</button>
        </div>
      </div>
    </div>
  </div>
