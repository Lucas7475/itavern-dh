<%- include('parts/head',{title:'iTavern'}); %>
    <link rel="stylesheet" href="css/login-cadastro.css">

<!-- INICIO -->
    <div class="row" class="container">


        <!-- PARTE ESQUERDA -->
        <div class="col-md-6" id="principal-esquerda">
            <div id="conteudo-1">
                <img src="images/logo-itavern.png" alt="iTavern Logo">
                <div id="nome-itavern">
                    <h1>iTavern</h1>
                    <h3>Rede social para Games</h3>   
                </div>
                <div id="lista">
                    <ul>
                        <li>Procure grupos na sua regi√£o</li>
                        <li>Filtre por vaga/tamanho do grupo</li>
                        <li>Marque encontros</li>
                    </ul>
                </div>
                <button>Saiba mais</button>
            </div>
        </div>



        <!-- PARTE DIREITA -->
        <div class="col-md-6" id="principal-direita">
            <div id="conteudo-2">
                <h1>LOGIN</h1>
                <div id="redes-sociais">
                    <ul>
                        <li><button class="facebook"></i>Entre com Facebook</button></li>
                        <li><button class="google">Entre com Google</button> </li>
                        <li><button class="twitter">Entre com Twitter</button></li>
                    </ul>
                </div>
                <div class="ou">
                    <h4>ou</h4>
                </div>
                <div id="login">
                    <h1>Insira sua conta iTavern</h1>
                    <div id="logar">
                        <input type="text" placeholder="Email"><br>
                        <input type="text" placeholder="Senha">
                        <a href="#"><h4>Esqueceu sua senha?</h4></a>
                        <button class="entrar">Entrar</button><br>
                    </div>
                    <button class="criar-conta" data-toggle="modal" data-target="#modalCadastro">Criar conta</button>
                </div>
            </div>
        </div>
    </div>

    <!-- CADASTRO -->

    <div class="modal fade" id="modalCadastro" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle">Cadastro</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="row">
                <label class="nomeUser col-6">
                    <br>
                    Nome:
                    <input type="text" name="nomeUser" id="nomeUser">
                </label>
                <br>
                <label class="sobrenomeUser col-6">
                    <br>
                    Sobrenome:
                    <input type="text" name="sobrenomeUser" id="sobrenomeUser">
                </label>
                <br>
                <label class="emailUser col-12">
                    <br>
                    Email:<br>
                    <input type="text" name="emailUser" id="emailUser">
                </label>
                <br>
                <label class="senhaUser col-12">
                    <br>
                    Senha:<br>
                    <input type="password" name="senhaUser" id="senhaUser">
                </label>
                <label class="senhaUser col-12">
                    <br>
                    Senha:<br>
                    <input type="password" name="senhaUser" id="senhaUser">
                </label>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cadastrar</button>
            </div>
          </div>
        </div>
      </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    
</body>
</html>