<%- include('parts/head',{title:'iTavern'}); %>
    <link rel="stylesheet" href="css/login-cadastro.css">

<!-- INICIO -->
    <div class="row" class="container">


        <!-- PARTE ESQUERDA -->
        <div class="col-md-6" id="principal-esquerda">
            <div id="conteudo-1">
                <img src="images/logo-itavern.png" alt="iTavern Logo">
                <div id="nome-itavern">
                    <h1>iTavern</h1>
                    <h3>Rede social para Games</h3>    
                </div>
                <div id="lista">
                    <ul>
                        <li>Procure grupos na sua região</li>
                        <li>Filtre por vaga/tamanho do grupo</li>
                        <li>Marque encontros</li>
                    </ul>
                </div>
                <button>Saiba mais</button>
            </div>
        </div>



        <!-- PARTE DIREITA -->
        <div class="col-md-6" id="principal-direita">
            <div id="conteudo-2">
                <h1>LOGIN</h1>
                <div id="redes-sociais">
                    <ul>
                        <li><button class="facebook">Entre com Facebook</button></li>
                        <li><button class="google">Entre com Google</button> </li>
                        <li><button class="twitter">Entre com Twitter</button></li>
                    </ul>
                </div>
                <div class="ou">
                    <h4>ou</h4>
                </div>
                <div id="login">
                    <h1>Insira sua conta iTavern</h1>
                    <div id="logar">
                        <input type="text" placeholder="Email"><br>
                        <input type="text" placeholder="Senha">
                        <a href="#"><h4>Esqueceu sua senha?</h4></a>
                    </div>
                    <button class="entrar">Entrar</button><br>
                    <button class="criar-conta" data-toggle="modal" data-target="#modalCadastro">Criar conta</button>
                </div>
            </div>
        </div>
    </div>

    <!-- CADASTRO -->

    <div class="modal bd-example-modal-lg" id="modalCadastro" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">


            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Cadastro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <div class="row">
                    <div id="nome" class="col-6">
                        <h6>Nome</h6>
                        <input type="text">
                    </div>
                    <div id="sobrenome" class="col-6">
                        <h6>Sobrenome</h6>
                        <input type="text">
                    </div>
                </div>
                <div class="row">
                    <div id="usuario" class="col-12">
                        <h6>Usuário</h6>
                        <input type="text">
                    </div>
                </div>
                <div class="row">
                    <div id="email" class="col-12">
                        <h6>Email</h6>
                        <input type="text">
                    </div>
                </div>

                <div class="row">
                    <div id="senha" class="col-12">
                        <h6>Senha</h6>
                        <input type="text">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn">Cadastrar</button>
            </div>
        </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    
</body>
</html>