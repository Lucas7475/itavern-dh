<%- include('parts/head',{title:'iTavern | Home'}); %>
<link rel="stylesheet" href="/css/grupos-busca.css" />
<link rel="stylesheet" href="/css/home.css" />
<%- include('parts/navbar', {current_page:'home'}); %>
<main>
  <span class="nav-btn" id="nav-btn">
    <i class="fas fa-bars"></i>
  </span>
  <section class="meusGrupos">
    <div class="section-header">
      <h3 class="section-title">meus grupos</h3>
      <div class="separator"></div>
      <a href="#" class="btn">
        novo
      </a>
    </div>
    <div class="groups-container">
      <!-- Inicio de um card de grupo -->
      <% for(let i=0; i < gruposDB.length; i++){ %>
      <article class="card">
        <div class="cover-container">
          <img src="/images/covers/<%= gruposDB[i].img %>" class="card-img-top" alt="..." />
          <i class="<%= gruposDB[i].icon %> fa-fw group-icon"></i>
        </div>
        <div class="card-body text-center">
          <h3 class="group-title"><%= gruposDB[i].nome %></h3>
          <h4 class="group-game"><%= gruposDB[i].jogo %></h4>
          <ul class="group-perks">
            <li>Próxima reunião em: 4 dias</li>
            <li style="color:green">22 novas mensagens</li>
          </ul>

          <a href="#" class="btn btn-danger btn-grupo">Info</a>
          <form action="/grupos?id=<% gruposDB[i].id %> " method="GET">
            <input class="btn btn-danger btn-grupo" type="submit" value="Chat"/>
          </form>
        </div>
      </article>
      <% } %>
      <!-- Fim de um card de grupo -->
    </div>
  </section>
</main>
<%- include('parts/foot'); %>